<div class="card border-dark mb-3" style="">
<div class="card-header">
  <h2>Sign up</h2>
</div>
<div class="card-body">
<h4 class="card-title">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="col-md-8">
      <div class="form-group">
        <i class="fa fa-envelope"></i> 
        <%= f.input :email, required: true, placeholder: "Enter your email", autofocus: true, label: false, class: "form-control custom-input", input_html: { style: "border-radius: 30px;"}  %>
      </div>
    </div>
    <div class="form-inputs">
      <div class="col-md-8">
        <div class="form-group">
          <i class="fa fa-lock"></i> 
          <%= f.input :password, required: true, label: false,  placeholder: ("Password (#{@minimum_password_length} characters minimum)" if @minimum_password_length), class: "form-control custom-input", input_html: { style: "border-radius: 30px;"}  %>
        </div>
      </div>
      <div class="form-inputs">
        <div class="col-md-8">
          <div class="form-group">
            <i class="fa fa-unlock-alt"></i> 
            <%= f.input :password_confirmation, required: true, label: false,  placeholder: "Please confirm your password.", input_html: { style: "border-radius: 30px;"}  %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <% end %>
</h4>
<p class="card-text">
<%= render "users/shared/links" %>
</p>
</div>
</div>